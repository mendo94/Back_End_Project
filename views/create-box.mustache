<!DOCTYPE html>
<html lang="en">

<head>

  {{>header}}
  <title>Create New Box</title>
</head>

<body>
  {{>navigation-menu}}


  <form action="/homepage/create-box" method="POST">
    <div class="form-group">
      <label for="formGroupExampleInput bg-light">Give your container a category</label>
      <input type="text" class="form-control" id="formGroupExampleInput" name="box" value="{{id}}"
        placeholder="Enter new category">
    </div>
    <button id="sidebarCollapse" type="submit"
      class="content-btn btn bg-light text-black-50 rounded-pill text-uppercase font-weight-bold px-4 mb-4">Create
      New
      Container</button>
  </form>

  {{^message}}
  {{/message}}
  {{>footer}}
</body>

</html>